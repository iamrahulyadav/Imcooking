<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.Sub.Foodie.Setting">


    <com.imcooking.customtext.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Setting"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginLeft="40dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="15dp">

        <com.imcooking.customtext.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Search Miles"
            android:textColor="@color/text_color_10"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>

        <Spinner
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorBlue"
            android:id="@+id/setting_spinner_miles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <com.imcooking.customtext.CustomEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodie_settings_miles"
            android:text="10"
            android:visibility="gone"
            android:inputType="number"
            android:textColor="@color/theme_color"
            android:textSize="14sp"
            android:maxLength="3"
            android:background="@drawable/shape_theme_border"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/view_4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="20dp">

        <android.support.v7.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodie_settings_notification"
            android:background="@color/colorWhite"
            android:textAlignment="viewStart"
            app:track="@drawable/switch_track"
            android:thumb="@drawable/switch_thumb"
            android:text="Notification"
            android:textOn="On"
            android:textOff="Off"
            app:switchMinWidth="50dp"
            app:showText="false"
            android:textColor="@color/text_color_10"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/view_4"/>

    <com.imcooking.customtext.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Update"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:gravity="center"
        android:onClick="foodie_settings_update"
        android:background="@drawable/shape_background_theme"
        android:layout_margin="30dp" />

</LinearLayout>
