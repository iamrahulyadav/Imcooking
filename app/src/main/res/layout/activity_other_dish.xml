<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chef_dish"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context="com.imcooking.activity.Sub.Foodie.EditProfile">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:id="@+id/other_dish_activity_layout_frame"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/other_dish_activity_layout"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/colorWhite">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@drawable/details_home">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jamie Malone"
                            android:id="@+id/activity_other_dish_txtChefName"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/activity_other_dish_txtChefAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Narangi Byepass Road, Y K Nagar, Vihar West India"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91-777888999"
                            android:visibility="gone"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"/>

                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:padding="8dp"
                        android:focusable="true"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_food"
                            android:layout_gravity="center"
                            android:id="@+id/activity_other_dish_cart_icon"
                            />
                        <TextView
                            android:id="@+id/activity_orther_dish_cart_count"
                            android:layout_toRightOf="@id/fragment_home_img_cart"
                            android:background="@drawable/badge_bg"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right|end|top"
                            android:layout_marginEnd="-8dp"
                            android:layout_marginRight="-3dp"
                            android:layout_marginTop="-5dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:textColor="@android:color/white"
                            android:text="0"
                            android:textSize="8sp"/>



                    </FrameLayout>


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/other_dish_profile_image"
                        android:layout_width="96dp"
                        android:layout_gravity="center"
                        android:layout_height="96dp"
                        android:src="@drawable/details_profile"
                        app:civ_border_width="3dp"
                        app:civ_border_color="@color/colorBlue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="Call"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/activity_other_dish_txtCall"
                        android:textStyle="bold"
                        android:background="@drawable/shape_background_theme"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />
                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/activity_other_dish_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:progressTint="@color/colorYellow"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1120 Likes"
                        android:layout_gravity="center"
                        android:id="@+id/activity_other_dish_txtChefLike"
                        android:textSize="10sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1120 Followers"
                        android:textSize="10sp"
                        android:id="@+id/activity_other_dish_txtChefFollower"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Dishes "
                android:textAllCaps="true"
                android:textSize="@dimen/largesize"
                android:gravity="center"
                android:textColor="@color/text_color_4"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/view_6"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:background="@drawable/shape_home_image"
                android:id="@+id/activity_other_dish_recycler"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>