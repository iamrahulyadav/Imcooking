<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.imcooking.activity.Sub.EditProfile">
    <include layout="@layout/custom_toolbar"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/chef_dish"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/details_home"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                <ImageView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_arrow_white"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jamie Malone"
                        android:id="@+id/activity_other_dish_txtChefName"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/activity_other_dish_txtChefAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Narangi Byepass Road, Y K Nagar, Vihar West India"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91-777888999"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/other_dish_profile_image"
                    android:layout_width="96dp"
                    android:layout_gravity="center"
                    android:layout_height="96dp"
                    android:src="@drawable/details_profile"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/colorBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Call"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:id="@+id/activity_other_dish_txtCall"
                    android:textStyle="bold"
                    android:background="@drawable/shape_background_theme"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:id="@+id/activity_other_dish_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:progressTint="@color/colorYellow"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1120 Likes"
                    android:layout_gravity="center"
                    android:id="@+id/activity_other_dish_txtChefLike"
                    android:textSize="10sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1120 Followers"
                    android:textSize="10sp"
                    android:id="@+id/activity_other_dish_txtChefFollower"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All dishes"
        android:textSize="@dimen/largesize"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:padding="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrey"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_other_dish_recycler"/>

</LinearLayout>