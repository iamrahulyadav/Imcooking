<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shape_background_white">

    <com.imcooking.customtext.CustomTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_uploading_video_count"
        android:text="Uploading Video - 20%"
        android:textColor="@color/text_color_4"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_margin="30dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_uploading_video_seekbar"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"/>

</LinearLayout>