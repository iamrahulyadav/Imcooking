<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/item_select_cuisine_click"
    android:background="@color/colorWhite">

    <com.imcooking.customtext.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_select_cuisine_text"
        android:text="Cuisine"
        android:textColor="@color/text_color_4"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/select_cuisine_view"
        android:layout_toLeftOf="@+id/item_select_cuisine_check_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_select_cuisine_check_layout"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_above="@+id/select_cuisine_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_select_cuisine_check_image"
            android:src="@drawable/ic_tick_text_4"
            android:layout_marginRight="10dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:id="@+id/select_cuisine_view"
        android:background="@color/view_6"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>