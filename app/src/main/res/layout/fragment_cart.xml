<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_marginBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorWhite">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/img_dish"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:src="@drawable/details_home"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_dish"
            android:layout_toLeftOf="@+id/cart_item_right">
            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Butter chicken"
                android:singleLine="true"
                android:textSize="12sp"
                android:id="@+id/tv_dish_name"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/button_bg2">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:id="@+id/tv_minus"
                    android:textColor="@color/colorBlue"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorLightGrey"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:id="@+id/tv_dish_count"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/colorBlack"/>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorLightGrey"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:id="@+id/tv_plus"
                            android:gravity="center"
                            android:textColor="@color/colorBlue"
                            android:textSize="20dp"/>


                </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_item_right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:gravity="right|center">

        <ImageView
            android:id="@+id/delete_added_dish_from_cart"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/delete" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:layout_gravity="center"
            android:id="@+id/tv_dish_price"
            android:textSize="12sp"
            android:textColor="@color/colorBlue"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>