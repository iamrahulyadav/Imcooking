<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.imcooking.activity.Sub.ManageAddress">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_left_arrow_1"
        android:drawablePadding="15dp"
        android:text="Help"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_1"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="HELP WITH OTHER QUERIES"
            android:textColor="@color/text_color_13"
            android:textSize="14sp"
            android:background="@color/bg_1"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="General Queries"
        android:textColor="@color/text_color_10"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"
        android:padding="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/view_4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Legal"
        android:textColor="@color/text_color_10"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"
        android:padding="15dp"
        android:onClick="help_legal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/view_4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="FAQs"
        android:textColor="@color/text_color_10"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"
        android:padding="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/view_4"/>

</LinearLayout>
