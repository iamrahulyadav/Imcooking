<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shape_background_white"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="bottom|center">

        <ImageView
            android:id="@+id/imageDialog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/icon"/>
            <com.imcooking.customtext.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="verify_user"
                android:id="@+id/imgdialog_text"
                android:text="Food has been added in your order list"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
              android:gravity="center"
               />

            <com.imcooking.customtext.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="verify_user"
                android:id="@+id/txtdialog_ok"
                android:text="OK"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/button_bg"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/tv_cancel_add_to_cart"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_circle_theme"/>
</RelativeLayout>