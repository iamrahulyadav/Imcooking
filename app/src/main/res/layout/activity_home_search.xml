<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.home.HomeSearchActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSearch_home_lay"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_home_search_back"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_left_arrow"/>
        <EditText
            android:id="@+id/etSearch_home"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:theme="@style/Widget.AppCompat.EditText"
            android:textColor="@color/colorBlack"
            android:drawableRight="@drawable/places_ic_search"
            android:drawablePadding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorLightGrey"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="type dish name or chef name"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/etSearch_home_lay"
        android:id="@+id/rvLocations"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
