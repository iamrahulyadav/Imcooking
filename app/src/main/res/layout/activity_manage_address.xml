<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.imcooking.activity.Sub.ManageAddress">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_left_arrow_1"
        android:drawablePadding="15dp"
        android:text="Manage Address"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SAVED Address"
        android:textColor="@color/text_color_13"
        android:textSize="14sp"
        android:background="@color/bg_1"
        android:gravity="center_vertical"
        android:padding="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="13dp"
            android:text="Home"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B-91, Ground Floor, Near Noida Authority, Sector-6, Noida, Uttar Pradesh 201301"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="37dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="37dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:background="@drawable/shape_background_theme"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:background="@drawable/shape_background_theme"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="13dp"
            android:text="OFFICE"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B-91, Ground Floor, Near Noida Authority, Sector-6, Noida, Uttar Pradesh 201301"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="37dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="37dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:background="@drawable/shape_background_theme"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:background="@drawable/shape_background_theme"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"/>

        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_5"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Add  New  Address"
        android:textAllCaps="true"
        android:textColor="@color/theme_color"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/shape_theme_border" />


</LinearLayout>
