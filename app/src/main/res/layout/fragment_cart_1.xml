<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/img_dish"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:src="@drawable/details_home"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <com.imcooking.customtext.CustomTextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Butter chicken"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/cardview_light_background">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@color/colorBlack"
                        android:showDividers="end">

                        <TextView
                            android:id="@+id/tv_minus"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/colorBlue"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dish_count"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/colorBlue"
                            android:textSize="20dp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="right|center"
                android:orientation="vertical"

                >

                <ImageView
                    android:id="@+id/delete_added_dish_from_cart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_drop_down_aarrow" />

                <TextView
                    android:id="@+id/tv_dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textColor="@color/colorBlue"
                    android:textSize="16sp" />

            </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>