<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.imcooking.fragment.foodie.NotificationFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Notifications"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginLeft="35dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:visibility="gone"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_food"
                android:layout_gravity="center"
                android:id="@+id/fragment_my_order_img_cart" />

            <TextView
                android:id="@+id/fragment_my_order_cart_count"
                android:layout_toRightOf="@id/fragment_my_order_img_cart"
                android:background="@drawable/badge_bg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="right|end|top"
                android:layout_marginEnd="-8dp"
                android:layout_marginRight="-3dp"
                android:layout_marginTop="-5dp"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@android:color/white"
                android:text="0"
                android:textSize="8sp"/>



        </FrameLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:id="@+id/fragment_notification_no_record">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bell"
                android:layout_gravity="center"/>
            <com.imcooking.customtext.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You don't have any notification"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/largesize"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_notification_recycler"/>

    </RelativeLayout>

</LinearLayout>
