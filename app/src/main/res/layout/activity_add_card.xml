<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.Sub.Foodie.AddCardActivity"
    android:orientation="vertical">


    <com.imcooking.customtext.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Card"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginLeft="40dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel">

            <com.imcooking.customtext.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chef_edit_profile_name"
                android:hint="FULL NAME "
                android:singleLine="true"
                android:textSize="@dimen/extra_smallsize"
                android:imeOptions="actionNext"
                android:background="@android:color/transparent"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/view_2"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <com.imcooking.customtext.CustomTextButtonTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="SAVE"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_background_theme_2" />

            <com.imcooking.customtext.CustomTextButtonTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="CANCEL"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_background_theme_2" />

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>