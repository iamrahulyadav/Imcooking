<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:paddingTop="24dp"
    tools:context="com.imcooking.fragment.foodie.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/profile_img_progress"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="@color/colorBlue"
                app:civ_border_width="2dp"
                android:id="@+id/foodie_profile_image"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/foodie_profile_image"
                android:layout_toLeftOf="@+id/profile_edit"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <com.imcooking.customtext.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodie_full_name"
                    android:text="Jemie Malone"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodie_phone_and_email"
                    android:text="999888777  JamieMalone65@gmail.com"
                    android:textColor="@color/text_color_11"
                    android:textSize="10dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_edit"
                android:text="Edit"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:paddingRight="15sp"
                android:paddingLeft="15sp"
                android:paddingBottom="5dp"
                android:paddingTop="5sp"
                android:background="@drawable/shape_background_theme"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_2"
            android:layout_marginTop="10dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="My Account"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_10"
            android:drawableRight="@drawable/ic_down_arrow_2"
            android:drawablePadding="15dp"
            android:padding="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_manage_address"
            android:text="Manage Address"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_user_name"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_chef_i_love"
            android:text="Chef i love"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_heart_1"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_payment_method"
            android:text="Payment method"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_credit_card"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_favorite_cuisine"
            android:text="Favorite cuisine"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_cutlery"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_setting"
            android:text="Setting"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_settings"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_change_pass"
            android:text="@string/fragment_profile_change_pass"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_locked"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawableStart="@drawable/ic_locked" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/profile_edit_help"
            android:text="Help"
            android:textSize="14sp"
            android:textColor="@color/text_color_10"
            android:drawableLeft="@drawable/ic_help"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:padding="20dp"/>

    </LinearLayout>

</ScrollView>
