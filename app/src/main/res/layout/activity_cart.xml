<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.imcooking.activity.Sub.EditProfile">

   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/linearlayout_prof">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="284dp"
                    android:fitsSystemWindows="true"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/details_home"
                        android:scaleType="fitXY"
                        android:alpha="0.8"/>

                    <LinearLayout
                        android:id="@+id/linearlayout_prof"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/ic_left_arrow_white" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cart"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/chef_profile_image"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:src="@drawable/details_profile"
                                app:civ_border_color="@color/colorBlue"
                                app:civ_border_width="3dp" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="120dp"
                                android:src="@drawable/details_profile"
                                android:visibility="gone" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:src="@drawable/ic_star_1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:src="@drawable/ic_star_1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:src="@drawable/ic_star_1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:src="@drawable/ic_star_1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/ic_star_1" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/chef_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jamie Malone"
                                android:textColor="@color/colorWhite"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/activity_cart_tv_chef_followers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1120 Followers"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginTop="0dp"
                                android:drawableLeft="@drawable/ic_drop_up_aarrow"
                                android:gravity="center"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="follow"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_cart_item">

            </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"

                            android:text="Tax"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$100"
                            android:textColor="@color/colorBlue"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Total"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$100"
                            android:textColor="@color/colorBlue"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_bg"
                            android:padding="8dp"
                            android:text="Add new item"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_bg"
                            android:padding="8dp"
                            android:text="Place order"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_dish"
                    android:layout_toLeftOf="@+id/cart_item_right">
                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Butter chicken"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:id="@+id/tv_dish_name"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/button_bg2">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:id="@+id/tv_minus"
                            android:textColor="@color/colorBlue"
                            android:gravity="center"
                            android:textSize="20sp"
                            />
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="25dp"
                            android:background="@color/colorLightGrey"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:id="@+id/tv_dish_count"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/colorBlack"/>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorLightGrey"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:id="@+id/tv_plus"
                            android:gravity="center"
                            android:textColor="@color/colorBlue"
                            android:textSize="20dp"/>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"

                    >
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="Payment"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/tv_payment"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:id="@+id/tv_dish_price"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlue"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
