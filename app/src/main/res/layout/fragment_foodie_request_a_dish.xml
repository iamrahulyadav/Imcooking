<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_2"
        android:padding="5dp"
        tools:context=".fragment.chef.chefprofile.FoodieRequestADish">

        <com.imcooking.customtext.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Select Category"
            android:textSize="12sp"
            android:textColor="@color/text_color_4"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_down_arrow_1"
            android:background="@drawable/shape_background_white_1"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/shape_background_white_1"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dish Title"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_4"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"/>

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Select Category"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_4"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_border_grey"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quantity"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_4"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentLeft="true"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/shape_background_theme_2" />

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_4"
                        android:gravity="center"
                        android:background="@drawable/shape_border_grey"/>

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/shape_background_theme_2" />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_4"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentLeft="true"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_color_4"
                        android:gravity="center"
                        android:background="@drawable/shape_border_grey"/>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/shape_background_theme_2" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calender"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Time"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_4"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_color_4"
                        android:gravity="center"
                        android:background="@drawable/shape_border_grey"/>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/shape_background_theme_2" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_clock"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/shape_background_white_1"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Note"
                android:textSize="12sp"
                android:textColor="@color/text_color_4"
                android:gravity="center_vertical"/>

            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/text_color_4"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>