<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.imcooking.activity.Sub.Foodie.ManageAddress">


    <com.imcooking.customtext.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Payment method"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginLeft="40dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.imcooking.customtext.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MANAGE CARD"
            android:textColor="@color/text_color_13"
            android:textSize="14sp"
            android:background="@color/bg_1"
            android:gravity="center_vertical"
            android:padding="15dp"/>
        <com.imcooking.customtext.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:id="@+id/activity_payment_method_txtAddCard"
            android:gravity="right"
            android:drawableRight="@drawable/ic_plus_blue"
            android:padding="20dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_pay_method_list"/>


</LinearLayout>
