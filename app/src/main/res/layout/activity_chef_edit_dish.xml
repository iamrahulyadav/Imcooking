<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Edit Dish"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_4"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dish Name"
                android:textSize="16sp"
                android:textColor="@color/text_color_4" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_5"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"/>
            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuisine"
                android:textSize="16sp"
                android:textColor="@color/text_color_4" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_5"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"/>
            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="16sp"
                android:textColor="@color/text_color_4" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_5"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"/>
            <com.imcooking.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients of Recipe"
                android:textSize="16sp"
                android:textColor="@color/text_color_4" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_5"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Note"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_13" />
            </LinearLayout>
            <View
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height=".5sp"
                android:background="@color/view_4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_13"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height=".5sp"
                android:background="@color/view_4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients of Recipe"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_13" />
            </LinearLayout>
            <View
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height=".5sp"
                android:background="@color/view_4"/>/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Note"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_13" />
            </LinearLayout>
            <View
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height=".5sp"
                android:background="@color/view_4"/>

            <TableLayout
                android:layout_marginLeft="42sp"
                android:layout_width="300sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Time"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="25sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_9" />

                <SeekBar
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableLayout>
            <View
                android:layout_width=".5sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height="match_parent"
                android:background="@color/view_4"/>


            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:textAlignment="viewStart"
                app:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="25sp"
                android:textColor="@color/text_color_9"
                android:textSize="16sp"
                android:text="Currently available" />


            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:textAlignment="viewStart"
                app:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="25sp"
                android:textColor="@color/text_color_9"
                android:textSize="16sp"
                android:text="Home delivery"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="@color/colorWhite"
                android:text="Pick up only"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_9"
                android:textSize="16sp"
                android:thumb="@drawable/switch_thumb"
                app:track="@drawable/switch_track" />


            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/text_color_9"
                        android:textSize="16sp"
                        android:layout_marginLeft="25sp"
                        android:text="Delivery miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="150sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_down_arrow"

                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/text_color_9"
                        android:layout_marginLeft="25sp"
                        android:textSize="16sp"
                        android:text="Photo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="200sp"
                        android:background="@drawable/shape_background_theme"
                        android:text="Browse"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="170sp"
                        android:text="Add more photos"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/text_color_9"
                        android:layout_marginLeft="25sp"
                        android:textSize="16sp"
                        android:text="Photo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="200sp"
                        android:background="@drawable/shape_background_theme"
                        android:text="Browse"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_height=".5sp"
                android:background="@color/view_4"/>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/text_color_9"
                        android:layout_marginLeft="25sp"
                        android:textSize="16sp"
                        android:text="Video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="213sp"
                        android:background="@drawable/shape_background_theme"
                        android:text="Browse"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="185sp"
                        android:text="Add more videos"
                        android:textSize="12sp"
                        android:textColor="@color/text_color_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>