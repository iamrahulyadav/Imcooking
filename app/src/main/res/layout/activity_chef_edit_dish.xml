<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Edit Dish"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_7"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <com.imcooking.customtext.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chef_edit_dish_name"
                android:hint="Dish Name"
                android:textColorHint="@color/text_color_4"
                android:textSize="16sp"
                android:textColor="@color/text_color_4"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:background="@color/view_6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <com.imcooking.customtext.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chef_edit_dish_cuisine"
                android:hint="Cuisine"
                android:textColorHint="@color/text_color_4"
                android:textSize="16sp"
                android:textColor="@color/text_color_4"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:background="@color/view_6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <com.imcooking.customtext.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chef_edit_dish_price"
                android:hint="Price"
                android:textColorHint="@color/text_color_4"
                android:textSize="16sp"
                android:textColor="@color/text_color_4"
                android:background="@android:color/transparent"  />
            <View
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:background="@color/view_6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <com.imcooking.customtext.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chef_edit_dish_description"
                android:hint="Ingredients of Recipe"
                android:textSize="16sp"
                android:textColorHint="@color/text_color_4"
                android:textColor="@color/text_color_4"
                android:background="@android:color/transparent"  />
            <View
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:background="@color/view_6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <com.imcooking.customtext.CustomEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chef_edit_dish_special_note"
                android:hint="Special Note"
                android:textSize="16sp"
                android:textColorHint="@color/text_color_4"
                android:textColor="@color/text_color_4"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:background="@color/view_6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_border_grey"
                android:padding="10dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Time"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_15" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00 AM"
                        android:textSize="14sp"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"/>
                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23:59 PM"
                        android:textSize="14sp"
                        android:textColor="@color/theme_color"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:textColor="@color/text_color_15"
                android:textSize="16sp"
                android:text="Currently available"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorBlack"/>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:textColor="@color/text_color_15"
                android:textSize="16sp"
                android:text="Home delivery"
                android:layout_marginTop="20dp"/>
            <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:textColor="@color/text_color_15"
                android:textSize="16sp"
                android:text="Pick up only"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivety miles"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_15"
                    android:layout_alignParentLeft="true"/>
                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_15"
                    android:background="@drawable/shape_border_theme"
                    android:drawableRight="@drawable/ic_down_arrow_1"
                    android:drawablePadding="25dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo1"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_15"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_background_theme"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"/>
                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add more Photos"
                        android:textSize="10sp"
                        android:textColor="@color/theme_color"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo2"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_15"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_background_theme"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"/>
                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add more Photos"
                        android:textSize="10sp"
                        android:textColor="@color/theme_color"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">

                <com.imcooking.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_15"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">

                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape_background_theme"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"/>
                    <com.imcooking.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add more Videos"
                        android:textSize="10sp"
                        android:textColor="@color/theme_color"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>