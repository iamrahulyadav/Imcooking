<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.imcooking.activity.Sub.Foodie.EditProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="284dp"
                android:fitsSystemWindows="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/details_home"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_marginTop="24dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textSize="16dp"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:id="@+id/activity_edit_profile_img"
                            android:src="@drawable/details_profile"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jamie Malone"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:id="@+id/activity_edit_profile_txtName"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="jamiemalone65@gmail.com"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            android:id="@+id/activity_edit_profile_txtEmail"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91-777888999"
                            android:id="@+id/activity_edit_profile_txtPhn"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <com.imcooking.customtext.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FULL NAME "
                        android:singleLine="true"
                        android:textSize="@dimen/extra_smallsize"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:id="@+id/activity_edit_profile_edtUserName"
                        android:textColor="@color/colorBlack"
                        android:paddingLeft="10dp" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/view_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <com.imcooking.customtext.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txtEmail"
                        android:singleLine="true"
                        android:textSize="@dimen/extra_smallsize"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:id="@+id/activity_edit_profile_edtEmail"
                        android:textColor="@color/colorBlack"
                        android:paddingLeft="10dp" />

                </android.support.design.widget.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/view_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">
                    <com.imcooking.customtext.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PHONE NUMBER"
                        android:singleLine="true"
                        android:textSize="@dimen/extra_smallsize"
                        android:imeOptions="actionDone"
                        android:background="@android:color/transparent"
                        android:id="@+id/activity_edit_profile_edtphone"
                        android:textColor="@color/colorBlack"
                        android:paddingLeft="10dp" />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/view_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom">

                    <com.imcooking.customtext.CustomTextButtonTextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="UPDATE"
                        android:textColor="@color/colorWhite"
                        app:textAllCaps="true"
                        android:background="@drawable/button_bg"
                        android:id="@+id/activity_login_txtlogin"
                        android:gravity="center"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
