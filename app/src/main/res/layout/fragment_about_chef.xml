<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorWhite">

    <com.imcooking.customtext.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_4" />

    <com.imcooking.customtext.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_chef_description"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:textSize="10dp"
        android:textColor="@color/text_color_4"/>

    <com.imcooking.customtext.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUISINE"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_4" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chef_about_recyler"
        android:layout_marginTop="15dp" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <com.imcooking.customtext.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/about_chef_cuisine"
            android:text="Indian"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/shape_background_theme"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <com.imcooking.customtext.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/about_chef_sub_cuisine"
            android:text="Mughlai"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/shape_background_theme"
            android:layout_marginLeft="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

    </LinearLayout>

</LinearLayout>